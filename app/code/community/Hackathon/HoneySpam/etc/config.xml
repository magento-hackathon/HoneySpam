<config>
    <modules>
        <Hackathon_HoneySpam>
            <version>1.1.0</version>
        </Hackathon_HoneySpam>
    </modules>
    <global>
        <models>
            <hackathon_honeyspam>
                <class>Hackathon_HoneySpam_Model</class>
            </hackathon_honeyspam>
        </models>
        <blocks>
            <hackathon_honeyspam>
                <class>Hackathon_HoneySpam_Block</class>
            </hackathon_honeyspam>
        </blocks>
        <helpers>
            <hackathon_honeyspam>
                <class>Hackathon_HoneySpam_Helper</class>
            </hackathon_honeyspam>
        </helpers>
    </global>
    <frontend>
        <events>
            <controller_action_predispatch_contacts_index_post>
                <observers>
                    <hackathon_honeyspam>
                        <class>hackathon_honeyspam/observer</class>
                        <method>checkHoneypot</method>
                    </hackathon_honeyspam>
                </observers>
            </controller_action_predispatch_contacts_index_post>

            <controller_action_predispatch_customer_account_createpost>
                <observers>
                    <hackathon_honeyspam>
                        <class>hackathon_honeyspam/observer</class>
                        <method>controllerActionPredispatchCustomerAccountCreatepost</method>
                    </hackathon_honeyspam>
                </observers>
            </controller_action_predispatch_customer_account_createpost>

            <controller_action_predispatch_customer_account_create>
                <observers>
                    <hackathon_honeyspam>
                        <class>hackathon_honeyspam/observer</class>
                        <method>controllerActionPredispatchCustomerAccountCreate</method>
                    </hackathon_honeyspam>
                </observers>
            </controller_action_predispatch_customer_account_create>

            <controller_action_predispatch_customer_account_forgotpasswordpost>
                <observers>
                    <hackathon_honeyspam>
                        <class>hackathon_honeyspam/observer</class>
                        <method>checkHoneypot</method>
                    </hackathon_honeyspam>
                </observers>
            </controller_action_predispatch_customer_account_forgotpasswordpost>

            <controller_action_predispatch_newsletter_subscriber_new>
                <observers>
                    <hackathon_honeyspam>
                        <class>hackathon_honeyspam/observer</class>
                        <method>checkHoneypot</method>
                    </hackathon_honeyspam>
                </observers>
            </controller_action_predispatch_newsletter_subscriber_new>

            <controller_action_predispatch_review_product_post>
                <observers>
                    <hackathon_honeyspam>
                        <class>hackathon_honeyspam/observer</class>
                        <method>checkHoneypot</method>
                    </hackathon_honeyspam>
                </observers>
            </controller_action_predispatch_review_product_post>
        </events>
        <layout>
            <updates>
                <hackathon_honeyspam>
                    <file>honeyspam.xml</file>
                </hackathon_honeyspam>
            </updates>
        </layout>
        <routers>
            <hackathon_honeyspam>
                <use>standard</use>
                <args>
                    <module>Hackathon_HoneySpam</module>
                    <frontName>honeyspam</frontName>
                </args>
            </hackathon_honeyspam>
        </routers>
    </frontend>
    <default>
        <hackathon>
            <honeyspam>
                <enableHoneypotName>1</enableHoneypotName>
                <enableHoneypotAccountCreateTime>1</enableHoneypotAccountCreateTime>
                <honeypotAccountCreateTime>5</honeypotAccountCreateTime>
                <honeypotName>url</honeypotName>
                <spamIndexLevel>2.5</spamIndexLevel>
            </honeyspam>
        </hackathon>
    </default>
</config>
